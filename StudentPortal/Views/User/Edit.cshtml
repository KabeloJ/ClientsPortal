@model Core.User.Models.UserExtModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row" >
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <br />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <br />
                <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <br />
                <span asp-validation-for="Country" class="text-danger"></span>
                <input asp-for="Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <br />
                <span asp-validation-for="Gender" class="text-danger"></span>
                <select asp-for="Gender" class="form-control">
                    <option>--Select Gender--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <br />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                <input type="date" asp-for="DateOfBirth" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Access Level</label>
                <br />
                <span asp-validation-for="AccessType" class="text-danger"></span>
                <select asp-for="AccessType" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
